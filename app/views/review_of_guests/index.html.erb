<div class="page-header">
  <h1>
    Review of guests
    <a href="/review_of_guests/new" class="btn btn-lg btn-success">New Review of guest</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Rating</th>
        <th>Content</th>
        <th>Actions</th>
      </tr>

      <% @review_of_guests.each do |review_of_guest| %>
      <tr>
        <td><%= review_of_guest.rating %></td>
        <td><%= review_of_guest.content %></td>
        <td>
          <a href="/review_of_guests/<%= review_of_guest.id %>" class="btn btn-primary">Show</a>
          <a href="/review_of_guests/<%= review_of_guest.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_review_of_guest/<%= review_of_guest.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @review_of_guests, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
