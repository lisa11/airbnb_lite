<!-- Validation failure messages -->
<% if @review_of_guest.errors.any? %>
  <% @review_of_guest.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Review Of Guest</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_review_of_guest" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for rating -->
      <div class="form-group">
        <label for="rating" class="control-label">
          Rating
        </label>

        <input type="text" id="rating" name="rating" placeholder="Rating" class="form-control" value="<%= @review_of_guest.rating %>">
      </div>

      <!-- Label and input for content -->
      <div class="form-group">
        <label for="content" class="control-label">
          Content
        </label>

        <textarea id="content" name="content" placeholder="Content" class="form-control" rows="3"><%= @review_of_guest.content %></textarea>
      </div>

      <button class="btn btn-success">
        Create Review Of Guest
      </button>
      or
      <a href="/review_of_guests">Cancel</a>
    </form>
  </div>
</div>
