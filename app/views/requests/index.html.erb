<div class="page-header">
  <h1>
    Requests
    <a href="/requests/new" class="btn btn-lg btn-success">New Request</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "requests_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :guest_introduction_cont, "Guest introduction contains" %>
    <%= f.text_field :guest_introduction_cont, :class => "form-control", :placeholder => "Guest introduction contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
          <%= f.label :created_at, "Guest Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='guestgteqcreated_atPicker'>
                  <%= f.text_field :guest_created_at_gteq, :class => "form-control", :placeholder => "Guest Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='guestlteqcreated_atPicker'>
                  <%= f.text_field :guest_created_at_lteq, :class => "form-control", :placeholder => "Guest Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#guestgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#guestlteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#guestgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#guestlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#guestlteqcreated_atPicker').on("dp.change", function (e) {
                  $('#guestgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/requests" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#requests_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Availabilities</th>
        <th>Guests</th>
        <th>Guest introduction</th>
        <th>Actions</th>
      </tr>

      <% @requests.each do |request| %>
      <tr>
        <td>
          <% if request.availabilities.present? %>
            <a href="/availabilities/<%= request.availabilities.id %>">
              <%= request.availabilities.listings_id %>
            </a>
          <% end %>
        </td>
        <td>
          <% if request.guest.present? %>
            <a href="/guests/<%= request.guest.id %>">
              <%= request.guest.created_at %>
            </a>
          <% end %>
        </td>
        <td><%= request.guest_introduction %></td>
        <td>
          <a href="/requests/<%= request.id %>" class="btn btn-primary">Show</a>
          <a href="/requests/<%= request.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_request/<%= request.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @requests, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
