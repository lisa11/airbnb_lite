<div class="page-header">
  <h3>Bookmark #<%= @bookmark.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Listings</dt>
      <dd>
        <% if @bookmark.listings.present? %>
          <a href="/listings/<%= @bookmark.listings_id %>">
            <%= @bookmark.listings.title %>
          </a>
        <% end %>
      </dd>

      <dt>Guests</dt>
      <dd>
        <% if @bookmark.guests.present? %>
          <a href="/guests/<%= @bookmark.guests_id %>">
            <%= @bookmark.guests.created_at %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/bookmarks" class="btn btn-primary">
        Back
      </a>
      <a href="/bookmarks/<%= @bookmark.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_bookmark/<%= @bookmark.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
