<!-- Validation failure messages -->
<% if @bookmark.errors.any? %>
  <% @bookmark.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Bookmark</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_bookmark" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for listings_id -->
      <div class="form-group">
        <label for="listings_id" class="control-label">
          Listings
        </label>

        <%= select_tag(:listings_id, options_from_collection_for_select(Listing.all, :id, :title, @bookmark.listings_id), :class => "form-control") %>
      </div>

      <!-- Label and input for guests_id -->
      <div class="form-group">
        <label for="guests_id" class="control-label">
          Guests
        </label>

        <%= select_tag(:guests_id, options_from_collection_for_select(Guest.all, :id, :created_at, @bookmark.guests_id), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Bookmark
      </button>
      or
      <a href="/bookmarks">Cancel</a>
    </form>
  </div>
</div>
