<div class="page-header">
  <h1>
    Messages
    <a href="/messages/new" class="btn btn-lg btn-success">New Message</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "messages_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :content_cont, "Content contains" %>
    <%= f.text_field :content_cont, :class => "form-control", :placeholder => "Content contains" %>
  </div>

<div class="form-group">
          <%= f.label :date, "Date" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='dategteqPicker'>
                  <%= f.text_field :date_gteq, :class => "form-control", :placeholder => "Date greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='datelteqPicker'>
                  <%= f.text_field :date_lteq, :class => "form-control", :placeholder => "Date less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#dategteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#datelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#dategteqPicker').on("dp.change", function (e) {
                  $('#datelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#datelteqPicker').on("dp.change", function (e) {
                  $('#dategteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
        <%= f.label :time, "Time" %>
        <div class="row">
          <div class='col-md-6 mb-1'>
            <div class='input-group date' id='timegteqPicker'>
              <%= f.text_field :time_gteq, :class => "form-control", :placeholder => "Time greater than or equal to" %>
              <span class="input-group-addon">
                  <span class="glyphicon glyphicon-time"></span>
              </span>
              <script type="text/javascript">
                $(function () {
                    $('#timegteqPicker').datetimepicker({
                      format: 'LT'
                    });
                });
              </script>
            </div>
          </div>
          <div class='col-md-6'>
            <div class='input-group date' id='timelteqPicker'>
              <%= f.text_field :time_lteq, :class => "form-control", :placeholder => "Time less than or equal to" %>
              <span class="input-group-addon">
                  <span class="glyphicon glyphicon-time"></span>
              </span>
              <script type="text/javascript">
                $(function () {
                    $('#timelteqPicker').datetimepicker({
                      format: 'LT'
                    });
                });
              </script>
            </div>
          </div>
        </div>
      </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
          <%= f.label :created_at, "Guest Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='hostsgteqcreated_atPicker'>
                  <%= f.text_field :hosts_created_at_gteq, :class => "form-control", :placeholder => "Guest Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='hostslteqcreated_atPicker'>
                  <%= f.text_field :hosts_created_at_lteq, :class => "form-control", :placeholder => "Guest Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#hostsgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#hostslteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#hostsgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#hostslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#hostslteqcreated_atPicker').on("dp.change", function (e) {
                  $('#hostsgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
      <%= f.label :guests_email_cont, "Host email contains" %>
      <%= f.text_field :guests_email_cont, :class => "form-control", :placeholder => "Host email contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/messages" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#messages_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Guests</th>
        <th>Hosts</th>
        <th>Time</th>
        <th>Date</th>
        <th>Content</th>
        <th>Actions</th>
      </tr>

      <% @messages.each do |message| %>
      <tr>
        <td>
          <% if message.guests.present? %>
            <a href="/hosts/<%= message.guests.id %>">
              <%= message.guests.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if message.hosts.present? %>
            <a href="/guests/<%= message.hosts.id %>">
              <%= message.hosts.created_at %>
            </a>
          <% end %>
        </td>
        <td><%= message.time %></td>
        <td><%= message.date %></td>
        <td><%= message.content %></td>
        <td>
          <a href="/messages/<%= message.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == message.hosts %>
            <a href="/messages/<%= message.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_message/<%= message.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @messages, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
